<table border="1px" border-color="#000">
	<tr>
		<td>
			id
		</td>
		<td>
			Фамилия
		</td>
		<td>
			Имя
		</td>
		<td>
			Почта
		</td>
		<td>
			Группа
		</td>
		<td>
			Дата рождения
		</td>
		<td>
			Характеристика научного руководителя
		</td>
		<td>
			Действие
		</td>
	</tr>
	<% @students.each do |student| %>
		<tr>
			<td>
				<%= student.id %>
			</td>
			<td>
				<%= student.surname %>
			</td>
			<td>
				<%= student.name %>
			</td>
			<td>
				<%= student.email %>
			</td>
			<td>
				<%= student.group %>
			</td>
			<td>
				<%= student.birth %>
			</td>
			<td>
				<%= student.opinion %>
			</td>
			<td>
				<%= link_to 'Просмотреть', student_path(student.id) %>
				<%= link_to 'Редактировать', edit_student_path(student.id) %>
				<%= link_to 'Удалить', student, method: :delete %>
			</td>
		</tr>
	<% end %>
</table>

<br />

<button><%= link_to 'Добавить нового студента', new_student_path %></button>

<br />
<br />



<table border="1px">
	<tr>
		<td>id-subject</td>
		<td>Предмет</td>
	</tr>
	<% @subjects.each do |subject| %>
		<tr>
			<td><%= subject.id %></td>
			<td><%= subject.subject %></td>
		</tr>
	<% end %>
</table>


<br />


<table border="1px" border-color="#000">
	<tr>
		<td>
			id
		</td>
		<td>
			Student ID
		</td>
		<td>
			Subject ID
		</td>
		<td>
			Mark
		</td>
		<td>
			Semestr
		</td>
    <td>
			Action
		</td>
	</tr>
	<% @marks.each do |mark| %>
		<tr>
      <td>
				<%= mark.id %>
			</td>
			<td>
				<%= mark.student_id %>
			</td>
			<td>
				<%= mark.subject_id %>
			</td>
			<td>
				<%= mark.mark %>
			</td>
			<td>
				<%= mark.semestr %>
			</td>
      <td>
        <%= link_to 'Редактировать', edit_mark_path(mark.id) %>
				<%= link_to 'Удалить', mark, method: :delete %>
			</td>
		</tr>
	<% end %>
</table>

