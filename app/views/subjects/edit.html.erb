<h1>Редактировать предмет:</h1>
<%= form_for @subject do |f| %>
	<table>
		<tr>
			<td>
  				<b>ID: </b>
			</td>
			<td>
				<%= f.text_field :id %>
			</td>
		</tr>
		<tr>
			<td>
  				<b>Subject Name: </b>
			</td>
			<td>
				<%= f.text_field :subject %>
			</td>
		</tr>
	</table>
	<%= f.submit "Edit Subject" %>
<% end %>
